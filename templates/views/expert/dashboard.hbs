
{{>header}}

{{>sidebar}}

<!--Main layout-->
  <main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">

      <!-- Heading -->
      <div class="card mb-4">

        <!--Card content-->
        <div class="card-body d-sm-flex justify-content-between">

          <h5 class="mb-2 mb-sm-0 breadcumb">
            <span>Dashboard</span>
          </h5>
        </div>

      </div>
      <!-- Heading -->

      <!--Grid row-->
      <div class="row wow fadeIn">

        <!--Grid column-->
        <div class="col-md-9 mb-4">

          <!--Card-->
          <div class="card">

            <!--Card content-->
            <div class="card-body">

              <canvas id="expertChart"></canvas>
              <div class="bar-loader text-center">
                <div class="spinner-grow m-auto" role="status" style="margin-bottom:50px"></div>
              </div>
            </div>

          </div>
          <!--/.Card-->

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-3 mb-4">

          <!--Card-->
          <div class="card mb-4">

            <!-- Card header -->
            <div class="card-header text-center">
              Posts
            </div>

            <!--Card content-->
            <div class="card-body">

              <canvas id="expertPieChart"></canvas>
              <div class="pie-loader text-center">
                <div class="spinner-grow m-auto" role="status" style="margin-bottom:50px"></div>
              </div>
            </div>

          </div>
          <!--/.Card-->

        

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->
     <div class="row wow fadeIn">
        <div class="col-md-12 mb-4">
          <!--Card-->
          <div class="card">
            <div class="card-header"><div class="text-center">Recently added posts</div> </div>
            <!--Card content-->
            <div class="card-body">
              
              <!-- Table  -->
              <table class="table table-hover">
                <!-- Table head -->
                <thead class="blue-grey lighten-4">
                  <tr>
                    <th>Post name</th>
                    <th>Created</th>
                    <th> created by</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <!-- Table head -->

                <!-- Table body -->
                <tbody>
                  {{#each results.recentPosts}}
                    <tr>
                      <th scope="row">{{this.title}}</th>
                      <td>{{this.date}}</td>
                      <td>{{this.createdBy}}</td>
                      <td><a href="/posts/view/{{this._id}}" class="btn btn-sm custom-bg text-white px-2"> <i class="fas fa-eye mr-1"></i>View</a></td>
                    </tr>
                  {{/each}}
                </tbody>
                <!-- Table body -->
              </table>
              <!-- Table  -->

            </div>
          </div>
          </div>
          </div>
          <!--/.Card-->

        <div class="row wow fadeIn">
          <div class="col-lg-12 col-md-6 mb-4">

          <!--Card-->
          <div class="card">

            <!-- Card header -->
            <div class="card-header"><div class="text-center">Your recent activities</div></div>

            <!--Card content-->
            <div class="card-body">

            <!-- Table  -->
            <table class="table table-hover">
              <!-- Table head -->
              <thead class="indigo lighten-4">
                <tr>
                  <th>Type</th>
                  <th>Action</th>
                  <th>Role</th>
                  <th class="text-center">Logs</th>
                </tr>
              </thead>
              <!-- Table head -->
            
              <!-- Table body -->
              <tbody>
                {{#each results.systemlogs}}
                <tr class="text-left">
                  <td style="text-transform:capitalize;">{{this.type}}</td>
                  <td style="text-transform:capitalize;">{{#ifCond this.action 'deleted'}} <span
                      class="text-danger">{{this.action}}</span> {{else}} <span class="text-warning">{{this.action}}</span>{{/ifCond}}
                  </td>
                  <td>{{this.executedBy.role}}</td>
                  <td>
                    <span>
                      <a href="javascript:void(0)">{{this.executedBy.name}}</a> {{this.action}} the post <a
                        href="/posts/view/{{this.executedOn._id}}" title="View Post" target="_blank" class="custom-text font-underline"> <u> {{this.executedOn.name}} </u> </a> on
                      <span class="text-danger">{{this.metadata.date}}</span> at <span class="text-danger">{{this.metadata.time}}</span>
                    </span>
                  </td>
                </tr>
                {{/each}}
              </tbody>
              <!-- Table body -->
            </table>

            </div>

          </div>
          <!--/.Card-->

        </div>
        </div>

    </div>
  </main>
  <!--Main layout-->


{{>footer}}