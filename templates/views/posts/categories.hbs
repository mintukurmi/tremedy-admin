
{{>header}}

{{>sidebar}}

{{!-- Main content --}}

 <!--Main layout-->
  <main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">

      <!-- Heading -->
      <div class="card mb-4">

        <!--Card content-->
        <div class="card-body d-sm-flex justify-content-between">

          <h5 class="mb-2 mb-sm-0 breadcumb">
            <a href="{{#ifCond user.role 'Admin'}}/admin/dashboard{{else}}/expert/dashboard{{/ifCond}}">Dashboard</a>
            <span>/</span>
            <span>Categories</span>
          </h5>


        </div>

      </div>

      <!-- content goes here-->
      
            <div class="row my-4 wow fadeIn">
                <div class="col-md-5 my-4">
                   <div class="card wow fadeIn">
                       <div class="card-body">
                           <h5 class="text-center">Add Category</h5>
                    <!-- Form -->
                        <form class="text-center" action="" method="POST">

                        <!-- Name -->
                        <div class="md-form mx-2">
                            <input type="text" id="materialLoginFormName" name="name" class="form-control" required>
                            <label for="materialLoginFormName">Category Name</label>
                        </div>

                        <!-- Sign in button -->
                        <button class="btn btn-default my-4 waves-effect z-depth-0" type="submit">Add Category</button>

                        </form>
                    <!-- Form -->
                       </div>
                   </div>
                </div>
                <div class="col-md-7 my-4">
                   <div class="card wow fadeIn">
                       <div class="card-body">
                           <h5 class="text-center">All Categories</h5>
                           <table class="table table-s table-hover mx-2">
                            <thead>
                                <tr>
                                <th scope="col">Category</th>
                                <th scope="col" rowspan="2" class="text-right">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each categories}}
                                <tr>
                                <td>{{this.name}}</td>
                                <td> <a href="javascript:(void);" class="p-3 mr-2" data-toggle="modal" data-target="#confirmDelete{{this._id}}"> <i class="fa fa-times-circle text-danger float-right" style="font-size: 1.2em;"></i> </a></td>
                                </tr>
                                {{/each}}
                            </tbody>
                            </table>
                       </div>
                   </div>
                </div>
            </div>
    
      {{#each categories}}
          
      <!--Modal: ConfirmDelete-->
        <div class="modal fade top" id="confirmDelete{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
          aria-hidden="true" data-backdrop="true">
        <div class="modal-dialog modal-sm modal-notify modal-danger" role="document">
        <!--Content-->
        <div class="modal-content text-center">
          <!--Header-->
          <div class="modal-header d-flex justify-content-center">
            <p class="heading">Are you sure?</p>
          </div>

          <!--Body-->
          <div class="modal-body">

            <i class="fas fa-times fa-4x animated rotateIn"></i>
            <h4 class="text-danger my-3">Delete Category ?</h4>
          </div>

          <!--Footer-->
          <div class="modal-footer flex-center">
              <form method="POST" action="./delete/" style="display: inline;">
                <input type="text" name="id" value="{{this._id}}" hidden >
                <button class="btn btn-outline-danger waves-effect waves-light" type="submit">Yes</button>
              </form>
            <a type="button" class="btn btn-danger waves-effect" data-dismiss="modal">No</a>
          </div>
          </div>
          <!--/.Content-->
        </div>
        </div>
    <!-- Modal Delete-->
      {{/each}}

    </div>

  </main>
  <!--Main layout-->

  {{!-- Main content here --}}

{{>footer}}