 <!--Main layout-->
  <main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">

      <!-- Heading -->
      <div class="card mb-4">

        <!--Card content-->
        <div class="card-body d-sm-flex justify-content-between">

          <h5 class="mb-2 mb-sm-0 breadcumb">
            <a href="" target="_blank">Dashboard</a>
            <span>/</span>
            <span>Manage Admins</span>
          </h5>
        </div>

      </div>

      <!-- content goes here-->
      
            <div class="row my-4 wow fadeIn">
                <div class="col-md-5 my-4">
                   <div class="card wow fadeIn">
                       <div class="card-body">
                           <h5 class="text-center">Add Admin</h5>
                    <!-- Form -->
                        <form class="text-center" action="" method="POST">

                        <!-- Name -->
                        <div class="md-form mx-2">
                            <input type="text" id="materialLoginFormName" name="name" class="form-control" required>
                            <label for="materialLoginFormName">Name</label>
                        </div>

                        <div class="md-form mx-2">
                            <input type="email" id="materialLoginFormEmail" name="email" class="form-control" required>
                            <label for="materialLoginFormEmail">Email</label>
                        </div>

                        <div class="md-form mx-2">
                            <input type="password" id="materialLoginFormPassword" name="password" class="form-control" required>
                            <label for="materialLoginFormPassword">Password</label>
                        </div>

                        <!-- Sign in button -->
                        <button class="btn btn-default my-4 waves-effect z-depth-0" type="submit">Submit</button>

                        </form>
                    <!-- Form -->
                       </div>
                   </div>
                </div>
                <div class="col-md-7 my-4">
                      <div class="alert alert-warning">
                        <strong>Please read these instructions carefully.</strong> 
                        <p class="mt-4"> In this section , you can add, delete, view other admins associated with T Remedy.</p>
                        <p>Remember adding a user as Admin is giving all rights to that user of the application. The user can perform the following actions:  </p>
                        <ul class="my-4">
                          <li>Create/Delete Posts</li>
                          <li>Create/Delete User</li>
                          <li>And other functionalities, including adding other users as admin</li>
                        </ul>
                      </div>
                </div>
            </div>

       <!-- All Admins -->

       <div class="">
            <h2 class="text-center">All Admins</h2>
            
        {{#if admin}}
        <!--Card-->
        <div class="card my-4 wow fadeIn">
            <div class="card-body">
            <div class="row">
                <div class="col-2"> <img src="{{admin.avatar}}" class="img-fluid rounded-circle vertical-center" alt="avatar"></div>
                <div class="col-8"><h5 class="text-left my-2 d-inline"> {{admin.name}}</h5> &nbsp; <span class="text-danger mx-1">(You)</span>
                <p class="text-muted font-italic">{{admin.email}} </p>
                    
                    <div class="action-btns mt-4">
                        <a class="btn btn-sm px-3 btn-default custom-bg" href="" data-toggle="modal" data-target="#infoModal{{admin._id}}" title="View Profile"> <i class="fas fa-eye"></i> View </a> 
                        <button class="btn btn-sm px-2 btn-danger" disabled title="You cannot delete your self"> <span><i class="fas fa-trash-alt mr-1"></i> Delete </span></button>
                    </div>
                    </div>
                    <div class="col-2">
                        <button class="btn btn-default custom-bg my-4 px-3" disabled> <i class="fa fa-envelope mr-2"></i> Email</button>
                    </div>
                </div>
                </div>
            </div>
            <!--/.Card-->

            <!--Modal: Info Modal-->
        <div class="modal fade top" id="infoModal{{admin._id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
          aria-hidden="true" data-backdrop="true">

            <div class="modal-dialog cascading-modal modal-avatar modal-sm" role="document">
          <!--Content-->
          <div class="modal-content">

            <!--Header-->
            <div class="modal-header">
              <img src="{{admin.avatar}}" class="rounded-circle img-responsive" alt="Avatar photo">
            </div>
            <!--Body-->
            <div class="modal-body text-center mb-1">

              <h5 class="mt-1 mb-2">{{admin.name}}</h5>
              <p class="custom-text">Administrator</p>
              <p class="text-muted">{{admin.email}}</p>

              <div class="text-center mt-4">
                <button data-dismiss="modal" class="btn btn-danger btn-sm waves-effect waves-light px-2"> <i class="fa fa-times-circle mr-1"></i>Close
                 </button>
              </div>
            </div>

          </div>
      <!--/.Content-->
    </div>
        </div>
    <!-- Info Modal-->

            {{/if}}

          {{#each admins}}
        <!--Card-->
        <div class="card my-4 wow fadeIn">
            <div class="card-body">
            <div class="row">
                <div class="col-2"> <img src="{{this.avatar}}" class="img-fluid rounded-circle vertical-center" alt="admin_avatar"></div>
                <div class="col-8"><h5 class="text-left my-2 d-inline"> {{this.name}}</h5> {{#ifCond this.email (admin.email) }} <span> You</span>{{/ifCond}}
                <p class="text-muted font-italic">{{this.email}} </p>
                    
                    <div class="action-btns mt-4">
                        <a class="btn btn-sm px-3 btn-default custom-bg" href="" data-toggle="modal" data-target="#infoModal{{this._id}}" title="View Profile"> <i class="fas fa-eye"></i> View </a> 
                        <button class="btn btn-sm px-2 btn-danger" type="submit" data-toggle="modal" data-target="#confirmDelete{{this._id}}"> <span><i class="fas fa-trash-alt mr-1"></i> Delete </span></button>
                    </div>
                    </div>
                    <div class="col-2">
                        <a href="/sendMail?mailto={{this.email}}&name={{this.name}}"
                         class="btn btn-default custom-bg my-4 px-3"> <i class="fa fa-envelope mr-2"></i> Email</a>
                    </div>
                </div>
                </div>
            </div>
            <!--/.Card-->
            {{/each}}
       </div>
                   
    
      {{#each admins}}

      <!--Modal: Info Modal-->
        <div class="modal fade top" id="infoModal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
          aria-hidden="true" data-backdrop="true">

            <div class="modal-dialog cascading-modal modal-avatar modal-sm" role="document">
          <!--Content-->
          <div class="modal-content">

            <!--Header-->
            <div class="modal-header">
              <img src="{{this.avatar}}" class="rounded-circle img-responsive" alt="Avatar photo">
            </div>
            <!--Body-->
            <div class="modal-body text-center mb-1">

              <h5 class="mt-1 mb-2">{{this.name}}</h5>
              <p class="custom-text">Administrator</p>
              <p class="text-muted">{{this.email}}</p>

              <div class="text-center mt-4">
                <button data-dismiss="modal" class="btn btn-danger btn-sm waves-effect waves-light px-2"> <i class="fa fa-times-circle mr-1"></i>Close
                </button>
              </div>
            </div>

          </div>
      <!--/.Content-->
    </div>
        </div>
    <!-- Info Modal-->

      <!--Modal: ConfirmDelete-->
        <div class="modal fade top" id="confirmDelete{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
          aria-hidden="true" data-backdrop="true">
        <div class="modal-dialog modal-sm modal-notify modal-danger" role="document">
        <!--Content-->
        <div class="modal-content text-center">
          <!--Header-->
          <div class="modal-header d-flex justify-content-center">
            <p class="heading">Are you sure?</p>
          </div>

          <!--Body-->
          <div class="modal-body">

            <i class="fas fa-times fa-4x animated rotateIn"></i>
            <h3 class="text-danger my-3">Delete Admin ?</h3>
          </div>

          <!--Footer-->
          <div class="modal-footer flex-center">
              <form method="POST" action="/admins/delete/" style="display: inline;">
                <input type="text" name="id" value="{{this._id}}" hidden >
                <button class="btn btn-outline-danger waves-effect waves-light" type="submit">Yes</button>
              </form>
            <a type="button" class="btn btn-danger waves-effect" data-dismiss="modal">No</a>
          </div>
          </div>
          <!--/.Content-->
        </div>
        </div>
    <!-- Modal Delete-->
      {{/each}}

    </div>

  </main>
