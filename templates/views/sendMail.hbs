  <main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">

      <!-- Heading -->
      <div class="card mb-4">

        <!--Card content-->
        <div class="card-body d-sm-flex justify-content-between">

          <h4 class="mb-2 mb-sm-0 breadcumb">
            <a href="/dashboard">Dashboard</a>
            <span>/</i> </span>
            <span>Send Email</span>
          </h4>

        </div>

      </div>

      <!-- content goes Here-->
      
 <div class="">
          <div class="row">
              <div class="col-md-8">
                  
                    <div class="card py-5">

                        <h4 class="text-center">Send Email</h4>

                        <!--Card content-->
                        <div class="card-body px-lg-5 pt-0">

                            <!-- Form -->
                            <form class="text-center" style="color: #757575;" action="/sendMail" method="POST">

                                <div class="form-row">
                                    <div class="col">
                                        <!-- First name -->
                                        <div class="md-form">
                                            <input type="text" id="materialRegisterFormFirstName" class="form-control" name="name" value="{{name}}" required>
                                            <label for="materialRegisterFormFirstName">Name</label>
                                        </div>
                                    </div>

                                    <div class="col">
                                        <!-- E-mail Recipient-->
                                        <div class="md-form">
                                            <input type="email" id="materialRegisterFormEmail" class="form-control" name="recipientEmail" value="{{email}}" required>
                                            <label for="materialRegisterFormEmail">Recipient Email</label>
                                        </div>
                                    </div>
                                </div>

                                <!-- E-mail Subject-->
                                <div class="md-form mt-0">
                                    <input type="text" id="materialRegisterFormSubject" class="form-control" name="subject" required>
                                    <label for="materialRegisterFormSubject">Subject</label>
                                </div>
                                <!--Message-->
                                <div class="md-form">
                                    <textarea id="materialContactFormMessage" class="form-control md-textarea" rows="5" name="message" required></textarea>
                                    <label for="materialContactFormMessage">Message</label>
                                </div>

                                <button type="submit" class="btn btn-default">Submit</button>

                            </form>
                            <!-- Form -->

                        </div>

                    </div>
              </div>

                <div class="col-md-4">
                    <div class="text-center mt-4 mb-5">
                      <img src="/img/envelope_n8lc.svg" alt="email_img" style="height: 170px" class="img-fluid">
                    </div>
                    <div class="alert alert-info my-5 pt-5">
                      <p>You can send email to the users/visitors or other admins of T Remedy from here.</p>
                      <p>The emails will be sent from <i> <u>tremedy101@gmail.com</u></i></p>
                      <p> You can continue with the follow up emails from the Gmail Mailbox.</p>
                    </div>
                </div>

          </div>
 </div>


  <h2 class="text-center my-5">All Mails</h2>

<!--start card-->
{{#each results.emails}}
        <!--Card-->
        <div class="card my-4 wow fadeIn">
            <div class="card-body">
            <div class="row">
                <div class="col-3"> <img src="./img/mail.png" style="height: 130px"; width="180px" class="img-fluid rounded-circle vertical-center" alt="avatar"></div>
                <div class="col-6 my-3"><h6 class="text-left my-2 d-inline">{{this.mail.subject}}</h6> &nbsp; <span class="text-danger mx-1"></span>
                <p class="text-muted font-italic mt-2">{{this.sentBy.name}}&nbsp;&nbsp;send to &nbsp;&nbsp;{{this.mail.name}}</p>
                    
                    <div class="action-btns mt-4">
                        <a class="btn btn-sm px-3 btn-default custom-bg" href="" data-toggle="modal" data-target="#infoModal{{this._id}}" title="View Profile"> <i class="fas fa-eye"></i> View </a>   
                    </div>
                    </div>
                    <div class="col-3 my-5"><i class="far fa-calendar-alt text-muted mr-1"></i> <span class="text-dark"> {{this.metadata.date}} </span>
                    <h6 class="my-2"><i class="far fa-clock text-muted mr-1"></i> <span class="text-dark">{{this.metadata.time}}</span></h6>
                    </div>
                </div>
                </div>
            </div>
            <!--/.Card-->

<!-- Modal -->
<div class="modal fade" id="infoModal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header mx-5">
            <div class="row">
              <div class="col-7">
              <img src="./img/mail.png" style="height: 130px"; width="180px" class="rounded-circle img-responsive" alt="Avatar photo">
            </div>
               <div class="col-5 my-5"><i class="far fa-calendar-alt text-muted mr-1"></i><span class="text-dark">{{this.metadata.date}}</span>
                    <h6 class="my-2"><i class="far fa-clock text-muted mr-1"></i><span class="text-dark">{{this.metadata.time}}</span></h6>
                    </div>
            </div>
          </div>
   
      <div class="modal-body">
       <div class="modal-body text-left mb-1">

              <p class="mt-1 mb-2"><b>{{this.mail.subject}}</b></p>
              <h6 class="mt-1 mb-2">Hello,&nbsp;<b>{{this.mail.name}}</b></h6>
              <p>{{this.mail.message}}</p><br>
                <p>This mail was sent to <b>{{this.mail.recipientEmail}}</b><br>
              by,&nbsp;&nbsp;<b>{{this.sentBy.email}}</b><span class="custom-text mx-1"><b>({{this.sentBy.role}})</b></span></p>
                 
      </div>
       
             <div class="text-center my-3">
                <button data-dismiss="modal" class="btn btn-danger btn-sm waves-effect waves-light px-2"> <i class="fa fa-times-circle mr-1"></i>Close
                 </button>
              </div>
      </div>
    </div>
  </div>
</div>
    <!-- Info Modal-->
{{/each}}
<!--end card-->



